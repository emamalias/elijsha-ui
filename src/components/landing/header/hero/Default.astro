---
import type { MarkdownContent } from 'astro';
import Wrapper from '../../../Wrapper.astro';

interface Props {
    headline: string | MarkdownContent;
    description: string | MarkdownContent;
}

const {
    headline,
    description,
    ...props
} = Astro.props;
---

<Wrapper>
    <div class="flex flex-col lg:flex-row gap-4 items-center">
        <div class="flex-1 relative w-full lg:w-1/2">
            <Fragment slot="left">
                <div class="w-full lg:max-w-[533px] space-y-4 my-6">
                    <h1 class="font-heading leading-none font-bold text-2xl md:text-5xl lg:text-7xl">
                        {headline}
                    </h1>
                    <p class="text-gray-500">{description}</p>
                </div>
            </Fragment>
        </div>
        <div class="flex-1 flex relative w-full lg:w-1/2 self-start my-6">
            <slot name="right" class="z-0" />
        </div>
    </div>
</Wrapper>